{
  "name": "personal-website",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "dev:profile": "turbo run dev --filter profile",
    "build:profile": "turbo run build --filter profile",
    "lint:profile": "turbo run lint --filter profile",
    "dev:admin": "turbo run dev --filter admin",
    "build:admin": "turbo run build --filter admin",
    "lint:admin": "turbo run lint --filter admin",
    "dev:backend": "pnpm dev --filter api"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
